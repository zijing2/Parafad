<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="left">
            <block class="MGS\Blog\Block\Adminhtml\Category\Edit\Tabs" name="category_edit_tabs">
                <block class="MGS\Blog\Block\Adminhtml\Category\Edit\Tab\Main" name="category_edit_tab_main"/>
                <block class="MGS\Blog\Block\Adminhtml\Category\Edit\Tab\Meta" name="category_edit_tab_meta"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">category_edit_tab_main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">meta_section</argument>
                    <argument name="block" xsi:type="string">category_edit_tab_meta</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="MGS\Blog\Block\Adminhtml\Category\Edit" name="category_edit"/>
        </referenceContainer>
    </body>
</page>
