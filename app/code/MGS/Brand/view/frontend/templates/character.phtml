<?php
$helper = $this->helper('MGS\Brand\Helper\Data');
$params = $this->getRequest()->getParams();
?>
<div class="characters">
    <ul class="characters-filter">
        <?php if (isset($params['keyword']) && $params['keyword'] != ''): ?>
            <li class="<?php if (isset($params['char']) && $params['char'] == '0-9'): ?>active<?php endif; ?>"><a title="<?php echo __('0-9'); ?>" href="<?php echo $helper->getBrandUrl() . '?char=0-9&keyword=' . $params['keyword']; ?>"><?php echo __('0-9'); ?></a></li>
            <?php foreach (range('A', 'Z') as $char): ?>
                <li class="<?php if (isset($params['char']) && $params['char'] == $char): ?>active<?php endif; ?>"><a href="<?php echo $helper->getBrandUrl() . '?char=' . $char . '&keyword=' . $params['keyword']; ?>"><?php echo $char; ?></a></li>
            <?php endforeach; ?>
        <?php else: ?>
            <li class="<?php if (isset($params['char']) && $params['char'] == '0-9'): ?>active<?php endif; ?>"><a title="<?php echo __('0-9'); ?>" href="<?php echo $helper->getBrandUrl() . '?char=0-9'; ?>"><?php echo __('0-9'); ?></a></li>
            <?php foreach (range('A', 'Z') as $char): ?>
                <li class="<?php if (isset($params['char']) && $params['char'] == $char): ?>active<?php endif; ?>"><a href="<?php echo $helper->getBrandUrl() . '?char=' . $char; ?>"><?php echo $char; ?></a></li>
            <?php endforeach; ?>
        <?php endif; ?>
    </ul>
    <div class="view-all">
        <a title="<?php echo __('View All'); ?>" href="<?php echo $helper->getBrandUrl(); ?>"><?php echo __('View All'); ?></a>
    </div>
	<div class="clear"></div>
</div>