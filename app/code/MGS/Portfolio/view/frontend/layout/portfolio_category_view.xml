<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="2columns-right">
    <body>
		<referenceContainer name="content">
			<block class="MGS\Portfolio\Block\Category" name="portfolio.list" template="MGS_Portfolio::list.phtml"/>
		</referenceContainer>
		
		<referenceBlock name="catalog.compare.sidebar" remove="true"/>
		<referenceBlock name="cart_sidebar" remove="true"/>
		<referenceBlock name="wishlist_sidebar" remove="true"/>
		<referenceBlock name="sale.reorder.sidebar" remove="true"/>
		<referenceBlock name="right.permanent.callout" remove="true"/>
		<referenceBlock name="right.reports.product.compared" remove="true"/>
		<referenceBlock name="right.reports.product.viewed" remove="true"/>
		
		<referenceContainer name="div.sidebar.additional">
			<block class="MGS\Portfolio\Block\Category" name="portfolio.menu" template="MGS_Portfolio::menu.phtml" />
		</referenceContainer>
		
    </body>
</page>
